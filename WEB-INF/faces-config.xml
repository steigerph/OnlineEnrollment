        <from-view-id>*</from-view-id> <!-- Applies to all pages -->
    
        <navigation-case>
            <from-outcome>registrar</from-outcome>
            <to-view-id>/Registrar/dashboard.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>dean</from-outcome>
            <to-view-id>/Dean/dashboard.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>cashier</from-outcome>
            <to-view-id>/Cashier/dashboard.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>admission</from-outcome>
            <to-view-id>/Admission/dashboard.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>student</from-outcome>
            <to-view-id>/Student/dashboard.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/Admin/dashboard.xhtml?faces-redirect=true</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
